<h1>Теги</h1>

<div class="form-group">
  <%= link_to 'Новый тег', new_admin_tag_path, class: 'btn btn-default' %>
</div>

<table class="table">
  <thead>
    <tr>
      <th>Тег</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @admin_tags.each do |admin_tag| %>
      <tr>
        <td><%= link_to admin_tag, admin_questions_path(tag: admin_tag.name) %></td>
        <td>
          <%= link_to 'Изменить', edit_admin_tag_path(admin_tag), class: 'btn btn-default' %>
          <%= link_to 'Удалить', [:admin, admin_tag], method: :delete, class: 'btn btn-danger', data: { confirm: 'Вы уверены?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
