<h1>Listing Questions</h1>

<%= link_to 'New Question', new_admin_question_path, class: 'btn btn-default' %>

<table class="table">
  <thead>
    <tr>
      <th>Question</th>
      <th>Epigraph</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @questions.each do |question| %>
      <tr>
        <td><%= link_to question.content, [:admin, question] %></td>
        <td><%= question.epigraph %></td>
        <td>
          <%= link_to 'Edit', edit_admin_question_path(question), class: 'btn btn-default' %>
          <%= link_to 'Destroy', question, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
