<p id="notice"><%= notice %></p>

<h1>Listing Questions</h1>

<%= link_to 'New Question', new_admin_question_path, class: 'btn btn-default' %>

<table class="table">
  <thead>
    <tr>
      <th>Question</th>
      <th>Epigraph</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @questions.each do |question| %>
      <tr>
        <td><%= link_to question.content, [:admin, question] %></td>
        <td><%= question.epigraph %></td>
        <td><%= link_to 'Show', question %></td>
        <td><%= link_to 'Edit', edit_admin_question_path(question) %></td>
        <td><%= link_to 'Destroy', question, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
